{
  "name": "youtube-download",
  "description": "An app to download YouTube videos into various audio and video formats",
  "version": "1.0.0",
  "main": "src/main.js",
  "author": "ksmithut <ksmith.ut@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "format": "prettier-eslint **/*.js --write",
    "lint": "standard && prettier-eslint **/*.js --list-different",
    "start": "electron .",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "ffmpeg-static": "^2.3.0",
    "ffprobe-static": "^3.0.0",
    "sanitize-filename": "^1.6.1",
    "youtube-dl": "^1.12.2"
  },
  "devDependencies": {
    "electron": "^3.0.5",
    "electron-builder": "^20.28.4",
    "prettier-eslint-cli": "^4.7.1",
    "standard": "^12.0.1"
  },
  "build": {
    "productName": "YouTube Download",
    "appId": "com.ksmithut.YouTubeDownload",
    "directories": {
      "output": "build"
    },
    "files": [
      "src/**/*"
    ],
    "asarUnpack": [
      "**/app/node_modules/ffmpeg-static/*",
      "**/app/node_modules/ffprobe-static/*",
      "**/app/node_modules/youtube-dl/*"
    ],
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "build/icons/icon.icns"
    },
    "win": {
      "icon": "build/icons/icon.ico"
    },
    "linux": {
      "icon": "build/icons"
    }
  }
}
